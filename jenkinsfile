pipeline {
    agent any
    tools {
        maven 'ajouter-maven' 
    }
    environment {
        DATE = new Date().format('yy.M')
        TAG = "${DATE}.${BUILD_NUMBER}"
        registry = "wi77739ssem/simple-java-maven-app-master"
        registryCredential = '3c467691-f056-4b5b-be31-59fff446f66a'
        dockerImage = ''
    }
    stages {
        stage ('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build') {
            steps{
                script{
                    
                   dockerImage = docker.build registry + ":$BUILD_NUMBER"           }    
            }
            
        }
	    
}
}