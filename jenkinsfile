pipeline {  
    agent any
    tools {
        maven 'maven-3.8.2' }
  stages { 
    stage('Clone repository') {
          checkout scm
}
     stage ('Build') {
            steps {
                sh 'mvn clean package'
            }
    stage('Build image') {
       dockerImage = docker.build("wissem777/simple-java-maven-app-master:latest")
    }
    
 stage('Push image') {
        withDockerRegistry([ credentialsId: "dockerhubaccount", url: "" ]) {
        dockerImage.push()
        }  
    }    
}
}
}